@model IEnumerable<Category>

@{
	ViewData["Title"] = "Dashboard";
}

<div class="container">
	<div class="row">
		<div class="col-sm-2">
			<ul class="list-group">
				<li class="list-unstyled list-group-item" style="background: #28A745">
					<h class="cardcard-title text-light">Dashboard</h>
				</li>
				<li class="list-unstyled list-group-item item">
					<a asp-controller="Adminpanel" asp-action="Accounts" class="text-decoration-none text-black">Accounts</a>
				</li>
				<li class="list-unstyled list-group-item item">
					<a asp-controller="Adminpanel" asp-action="Products" class="text-decoration-none text-black">Products</a>
				</li>
				<li class="list-unstyled list-group-item item" style="background: #FFB802; border-left: 5px solid #28A745">
					<a asp-controller="Adminpanel" asp-action="Categories" class="text-decoration-none text-light">Categories</a>
				</li>
				<li class="list-unstyled list-group-item item">
					<a asp-controller="Adminpanel" asp-action="Orders" class="text-decoration-none text-black">Orders</a>
				</li>
			</ul>
		</div>
		<div class="col-sm-10">
			<div class="card p-3">
				<div class="d-flex justify-content-between">
					<h3 class="card-title" style="color #28A745:">Categories</h3>
					<div class="btn" style="background: #28A745">
						<i class="bi bi-plus-circle text-light"></i>
						<a asp-controller="Adminpanel" asp-action="AddCategory" class="text-light text-decoration-none">Add Category</a>
					</div>
				</div>
				<table class="table">
					<thead>
						<tr>
							<th style="color: #28A745">Id</th>
							<th style="color: #28A745">Product name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (Category cat in Model)
						{
							<tr class="text-muted">
								<td>
									<a asp-controller="Adminpanel" asp-action="EditUser" asp-route-id="@cat.CategoryId"
								   class="text-muted">@cat.CategoryId</a>
								</td>
								<td>@cat.Name</td>
								<td>
									<i class="bi bi-trash" style="color: #D11A2A"></i>
									<a asp-controller="Adminpanel" asp-action="DeleteCategory" asp-route-id="@cat.CategoryId" class="text-decoration-none" style="color: #D11A2A">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>